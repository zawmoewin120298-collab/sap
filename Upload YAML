apiVersion: apps/v1
kind: Deployment
metadata:
  name: v2ray-server
  namespace: default
spec:
  replicas: 1
  selector:
    matchLabels:
      app: v2ray
  template:
    metadata:
      labels:
        app: v2ray
    spec:
      containers:
      - name: v2ray
        image: v2fly/v2fly-core:latest
        command: ["/usr/bin/v2ray", "run", "-config", "https://raw.githubusercontent.com/zawmoewin120298-collab/sap/refs/heads/main/config.json"]
        ports:
        - containerPort: 8080
